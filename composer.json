{
  "name": "integrantedexperts/behat-screenshot",
  "description": "Pluggable context to capture screenshots from failed behat tests",
  "type": "library",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Alex Skrypnyk",
      "email": "alex.designworks@gmail.com"
    },
    {
      "name": "Alexander Sharkov",
      "email": "blade.didan@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "repositories": {
    "behat-phpserver": {
      "type": "package",
      "package": {
        "name": "alexdesignworks/behat-phpserver",
        "version": "1.0",
        "source": {
          "url": "/Users/blade/sites/ie/behat-phpserver",
          "type": "git",
          "reference": "origin/master"
        },
        "autoload": {
          "classmap": ["src/"]
        }
      }
    }
  },
  "require": {
    "behat/behat": "~3.1.0-rc2",
    "behat/mink": "~1.5",
    "behat/mink-extension": "~v2.2",
    "behat/mink-goutte-driver": "*",
    "behat/mink-selenium2-driver": "*"
  },
  "require-dev": {
    "alexdesignworks/behat-phpserver": "1.0",
    "squizlabs/php_codesniffer": "2.*"
  },
  "autoload": {
    "psr-0": {
      "IntegratedExperts\\BehatScreenshot": "src/"
    }
  },
  "scripts": {
    "cs": "./vendor/bin/phpcs --colors -s",
    "cbf": "./vendor/bin/phpcbf --colors",
    "test": "cd ./tests/behat/ && ../../vendor/bin/behat"
  }
}
